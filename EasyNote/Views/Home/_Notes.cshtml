                <a href="#" class="list-group-item">Vestibulum at eros</a>*@
        </div>

    </div>
    <div class="col-md-9">
        <form id="frmNote" method="post" style="display: none">
            @Html.AntiForgeryToken()
            <input type="hidden" id="id" name="id" />
            <div class="form-group">
                <input id="title" name="title" type="text" class="form-control" placeholder="Title" required maxlength="100" />
            </div>

            <div class="form-group">
                <textarea id="content" name="content" class="form-control" type="text" placeholder="Your Note" rows="10"></textarea>
            </div>

            <div>
                <button type="submit" id="btnSave" class="btn btn-primary">Save</button>
                <button type="button" id="btnDelete" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>
